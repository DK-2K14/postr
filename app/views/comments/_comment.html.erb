<div class="post-comment-container comments">
  <div class="post-author">
    posted by <span class="username"><%= comment.username %></span>
    <%= time_ago_in_words(comment.created_at) %> ago.

    <%= link_to "Reply", new_comment_comment_path(comment), class: "reply-link" %>
  </div>

  <div class="comment-reply">
    <%= comment.content %>
  </div>
</div>

<div class="comments-comment">
  <%= render comment.comments.by_most_recent %>
</div>
