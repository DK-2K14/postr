<%= form_for :session, url: session_path do |form| %>
  <div class="sign-up-container">
    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div class="sign-in-button">
      <%= form.submit "Sign in" %>
    </div>
<% end %>
