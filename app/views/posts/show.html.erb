<div class="wrapper">
  <div class="post-details-container">
    <div class="voting">
    <%= link_to post_upvotes_path(@post), method: :post do %>
      <%= image_tag "up-arrow.png" %>
    <% end %>
      <div class="total-votes"><%= @post.total_votes %></div>
    <%= link_to post_downvotes_path(@post), method: :post do %>
      <%= image_tag "down-arrow.png" %>
    <% end %>
    </div>
    <h1 class="post-details-title">
      <%= @post.title %>
    </h1>
    <div class="post-details-author">
      posted by <span class="username"><%= @post.user.username %></span>
      <%= time_ago_in_words(@post.created_at)%> ago.
    </div>
    <div class="post-text">
      <%= @post.text %>
    </div>
  </div>

  <div class="comment-box">
    <%= form_for ([@post, @comment]) do |f| %>
      <%= f.label :content, "Comment:" %>
      <%= f.text_area :content, class: "comment-box-text-area" %>
      <%= f.submit %>
    <% end %>
  </div>

<div>
  <%= render @post.comments.by_most_recent %>
</div>

  <%= link_to "See All Posts", root_path %>

